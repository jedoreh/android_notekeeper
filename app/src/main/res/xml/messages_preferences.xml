<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:defaultValue="true"
        android:key="user_default_display_name"
        android:title="@string/pref_default_display_name"
        app:key="user_display_name"
        app:title="@string/pref_title_display_name"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:defaultValue="true"
        android:key="user_email_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_default_email_address"
        app:defaultValue="true"
        app:title="@string/pref_title_email_address" />
    <ListPreference
        android:title="@string/pref_title_favorite_social_network"
        app:defaultValue="true"
        app:entries="@array/pref_entries_favorite_social"
        app:entryValues="@string/pref_default_favorite_social"
        app:key="user_favorite_social"
        app:title="@string/pref_title_favorite_social_network"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>